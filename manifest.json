        "icons": {
            "16": "icons/highlighter_16.png",
            "32": "icons/highlighter_32.png",
            "48": "icons/highlighter_48.png",
            "128": "icons/highlighter_128.png"
        }
    },
    

    "options_page":"option.html",

   
    "manifest_version":2
}